@model VIsitorViewModel

<h2>Ziyaretci yorumlari</h2>
@foreach (var item in ViewBag.visitorViewModels as List<VIsitorViewModel>)
{
    <div class="card mt-3" >
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@item.Created.ToShortDateString()</h6>
            <p class="card-text">@item.Comment</p>

        </div>
    </div>
}

@if(TempData["result"]!=null)
{
    <div class="alert alert-info">@TempData["result"]</div>
}


<form asp-controller="Home" asp-action="SaveVisitorComment" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"> Isim</label>
        <input  class="form-control"asp-for="Name">

    
       <div class="form-floating mb-3">
        <textarea asp-for="Comment" class="form-control" placeholder="Yorum" style="height:"100px></textarea>
        <label asp-for="Comment">Yorum</label>
    
    </div>

    </div>
        

    <button type="submit" class="btn btn-primary">Submit</button>
</form>